<!-- _BookPopup.cshtml -->
@model ASI.Basecode.Services.ServiceModels.BookViewModel
@section styles {
    <link rel="stylesheet" href="~/css/admindashboard.css" />
}
@{
    Layout = "_Layout";
}
<div class="modal" id="BookModal">
    <div class="modal-dialog-book">
        <div class="modal-content">
            <div class="modal-header">
                <h4 id="modalTitle"></h4>
            </div>
            <form method="post" asp-action="AddBook" asp-controller="Book" id="BookForm" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="add-book-container">
                        <div class="add-book-col">
                            <input type="hidden" asp-for="bookId" value="0" />
                            <div>
                                <label class="input-label" asp-for="title">Book Title</label>
                                <input type="text" asp-for="title" class="form-control" placeholder="Title" />
                            </div>
                            <div>
                                <label class="input-label" asp-for="author">Author</label>
                                <input type="text" asp-for="author" class="form-control" placeholder="Author" />
                            </div>
                            <div>
                                <label class="input-label" asp-for="synopsis">Book Synopsis</label>
                                <input type="text" asp-for="synopsis" class="form-control" placeholder="Synopsis" />
                            </div>
                            <div>
                                <label class="input-label" asp-for="publisher">Book Publisher</label>
                                <input type="text" asp-for="publisher" class="form-control" placeholder="Publisher" />
                            </div>
                            <div>
                                <label class="input-label" asp-for="pubYear">Publication Year</label>
                                <input type="text" asp-for="pubYear" class="form-control" placeholder="Publication Year" />
                            </div>
                            <div>
                                <label class="input-label" asp-for="isbn">Book ISBN</label>
                                <input type="text" asp-for="isbn" class="form-control" placeholder="Isbn" />
                            </div>
                        </div>
                        <div class="add-book-col">
                            <div>
                                <label class="input-label" asp-for="language">Language</label>
                                <input type="text" asp-for="language" class="form-control" placeholder="Language" />
                            </div>
                            <br />
                            <label asp-for="selectedGenres" class="control-label">Genre</label>
                            <div style="height: 200px; overflow-y: auto;">
                                @*<label class="input-label" asp-for="genre">Genre</label>
                                <input type="text" asp-for="genre" class="form-control" placeholder="Genre" />*@
                                @foreach (var genre in Model.genres)
                                {
                                    <div class="form-control">
                                        <input type="checkbox" id="@($"genre_{genre.genreName}")" name="selectedGenres" value="@genre.genreId" />
                                        <label for="@($"genre_{genre.genreName}")">@genre.genreName</label>
                                    </div>
                                }
                                <span asp-validation-for="selectedGenres" class="text-danger"></span>
                            </div>
                            <div>
                                <label class="input-label">Book Cover</label>
                                <input type="file" name="image" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="modal-button-close" id="Close" type="button" data-dismiss="modal">Close</button>
                    <button class="modal-button" id="Save" type="submit">Add Book</button>
                    <button class="modal-button" id="Update" type="submit" onclick="update();" style="display: none">Update Book</button>

                </div>
            </form>

        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/js/Book.js"></script>
