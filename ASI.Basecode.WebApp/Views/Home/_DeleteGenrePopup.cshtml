@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@model ASI.Basecode.Services.ServiceModels.GenreViewModel
@section styles {
    <link rel="stylesheet" href="~/css/admindashboard.css" />
}
<div class="modal" id="DeleteGenreModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 id="modalTitle">Delete Genre</h4>
            </div>
            <form method="post" asp-action="DeleteGenre" asp-controller="Genre" id="DeleteGenreForm">
                <div class="modal-body">
                    <div>
                        <input type="hidden" id="deleteGenreId" asp-for="genreId" />
                        <p class="delete-modal-caption">Are you sure you want to delete this Genre?<br /> This action is permanent.</p>
                    </div>

                </div>
                <div class="modal-footer">
                    <button class="modal-button-close" id="Close" type="button" data-dismiss="modal">Close</button>
                    <button class="modal-button" id="Delete" type="submit">Delete Genre</button>

                </div>
            </form>
        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/js/Genre.js"></script>
