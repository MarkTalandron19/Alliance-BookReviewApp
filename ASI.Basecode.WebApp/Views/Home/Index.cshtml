@model IEnumerable<ASI.Basecode.Data.Models.Genre>
@section styles {
    <link rel="stylesheet" href="~/css/admindashboard.css" />
}
@{
    ViewData["Title"] = "Home Page";
}

<div class="body-main">
    <div class="body-two-section">
        <div class="left-space">
            <div class="left-menu">
                <div>
                    <img class="bibliobibuli-logo" src="~/img/logo-leftaligned.png" />
                    <div class="menu-items">
                    <div class="leftmenu-item-title">
                        <div class="leftmenu-item">
                            <img class="leftmenu-icons" src="~/img/dashboard-icon.png" />
                            Book Management<br />Dashboard
                        </div>
                    </div>
                        <hr class="menu-divider" />
                    <button class="leftmenu-items">
                            <div class="leftmenu-item">
                            <img class="leftmenu-icons" src="~/img/booklist-icon.png" />
                            Book List
                        </div>
                    </button>
                    <button class="leftmenu-items">
                            <div class="leftmenu-item">
                                <img class="leftmenu-icons" src="~/img/booklist-icon.png" />
                            Genre List
                        </div>
                    </button>
                    </div>
                </div>
                <div>
                    <button class="logout-button">
                        <div class="logout-text">
                            <img class="leftmenu-icons" src="~/img/logout-icon.png" />
                            Logout
                        </div>
                     </button>
                </div>
            </div>
        </div>
        <div class="admin-dashboard-list">
            <div class="admin-header">
                <div class="logosec">
                    Welcome, @HttpContextAccessor.HttpContext.Session.GetString("UserName")!
                    <div class="mr-20 hover-pointer" style="position: relative">
                        <div class="dp">
                            <img src="~/img/profile-logo.png"
                                 class="dpicn hover-pointer"
                                 alt="dp">
                        </div>
                    </div>
                </div>
            </div>
            <div class="dashboard">
                <div class="dashboard-title-div">
                    <p class="dashboard-title">Book Genre List Management</p>
                    <button class="add-button" id="AddBtn"><p class="button-text">+</p></button>
                </div>
                <hr class="divider"/>
                <p class="dashboard-subtitle">Book Genre you have created</p>
                <div class="dashboard-card">
                    <table class="dashboard-table">
                        <thead class="dashboard-table-header">
                            <tr class="header-row">
                                <th style="width: 25%;">
                                    Genre Name
                                </th>
                                <th style="width: 50%;">
                                    Short Description
                                </th>
                                <th style="width: 25%;">
                                    operation
                                </th>
                            </tr>
                        </thead>
                        <tbody id="tableBody">
                            @foreach (var genre in Model)
                            {
                                <tr>
                                    <td>@genre.genreName</td>
                                    <td>@genre.description</td>
                                    <td>
                                        <button class="edit-button" id="Update" onclick="GetGenreEdit(\'' + @genre.genreId + '\');">Edit</button>
                                        <button class="delete-button" onclick="Edit(\'' + @genre.genreId + '\')">Delete</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <p class="dashboard-subtitle">Book Genre List</p>
                <div class="dashboard-card">
                    <table class="dashboard-table">
                        <thead class="dashboard-table-header">
                            <tr class="header-row">
                                <th>
                                    Genre Name
                                </th>
                                <th>
                                    Short Description
                                </th>
                                <th>
                                    Created by
                                </th>
                                <th>
                                    Date Added
                                </th>
                            </tr>
                        </thead>
                        <tbody id="tableBody">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("_GenrePopupPartial", new ASI.Basecode.Services.ServiceModels.GenreViewModel())
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/js/Genre.js"></script>

